<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/fab_margin"
    >



    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Name : Shakti Srivastava \n Address: Banjara Hills, Hyderabad,\n Telangana, India \n Phone Number: 7905367810"
        android:paddingTop="50dp"
        />
    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mSendEmailToSupport"
        app:srcCompat="@drawable/ic_email_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/details"

        />

    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mButtonCallSupport"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/details"
        app:srcCompat="@drawable/ic_phone_in_talk_black_24dp"
      />
</RelativeLayout>
